@model AnasayfaViewModel

@{
    ViewData["Title"] = "MASKER - Haber Portali";
    ViewData["Description"] = "MASKER haber portali - Guncel haberler, son dakika gelismeler ve blog yazilari. Turkiye ve dunya haberlerini takip edin.";
    ViewData["Keywords"] = "haberler, guncel, son dakika, blog, teknoloji, MASKER";
}

<style>
    /* Genisleyen Kartlar (Expanding Panels) */
    .expanding-container { display: flex; width: 100%; padding: 0 15px; margin-bottom: 2rem; }
    .expanding-panel {
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 500px;
        border-radius: 20px;
        cursor: pointer;
        flex: 0.5;
        margin: 8px;
        position: relative;
        transition: flex 0.7s ease-in-out;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }
    .expanding-panel::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 60%;
        background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.4) 50%, transparent 100%);
        border-radius: 0 0 20px 20px;
    }
    .expanding-panel .panel-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 2rem;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.5s ease-in-out 0.3s;
    }
    .expanding-panel.active { flex: 5; }
    .expanding-panel.active .panel-content { opacity: 1; transform: translateY(0); }
    .panel-category {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.8rem;
        text-decoration: none;
    }
    .panel-category:hover { color: #fff; opacity: 0.9; }
    .panel-title {
        color: #fff;
        font-size: 1.5rem;
        font-weight: 700;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.5);
        line-height: 1.3;
        margin: 0;
        text-decoration: none;
        display: block;
    }
    .panel-title:hover { color: #fff; opacity: 0.9; }
    .panel-number {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: rgba(255,255,255,0.2);
        backdrop-filter: blur(10px);
        color: #fff;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1rem;
    }

    .breaking-news { background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%); padding: 1.2rem 0; margin-bottom: 2rem; box-shadow: 0 4px 15px rgba(0,0,0,0.1); }
    .breaking-badge { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: #fff; padding: 0.6rem 1.2rem; border-radius: 25px; font-weight: 700; text-transform: uppercase; letter-spacing: 1px; font-size: 0.9rem; }
    .breaking-text a { color: #fff; text-decoration: none; transition: opacity 0.2s; }
    .breaking-text a:hover { opacity: 0.8; }

    .section-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 3px solid #f0f0f0; }
    .section-title { font-size: 1.8rem; font-weight: 700; color: #2d3748; margin: 0; position: relative; }
    .section-title::before { content: ''; position: absolute; bottom: -1rem; left: 0; width: 60px; height: 3px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .section-link { color: #667eea; text-decoration: none; font-weight: 600; transition: color 0.2s; }
    .section-link:hover { color: #764ba2; }

    .news-card { background: #fff; border-radius: 15px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.08); transition: all 0.3s ease; margin-bottom: 2rem; border: 1px solid #e2e8f0; }
    .news-card:hover { transform: translateY(-8px); box-shadow: 0 12px 30px rgba(0,0,0,0.15); }
    .news-card-img { position: relative; height: 250px; overflow: hidden; }
    .news-card-img img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s; }
    .news-card:hover .news-card-img img { transform: scale(1.1); }
    .news-card-body { padding: 1.5rem; }
    .news-meta { display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem; }
    .news-badge { display: inline-block; background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: #fff; padding: 0.4rem 0.8rem; border-radius: 15px; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; text-decoration: none; }
    .news-date { color: #a0aec0; font-size: 0.85rem; }
    .news-date i { margin-right: 0.3rem; }
    .news-title { font-size: 1.25rem; font-weight: 700; color: #2d3748; margin-bottom: 0.8rem; line-height: 1.4; text-decoration: none; display: block; transition: color 0.2s; }
    .news-title:hover { color: #667eea; }
    .news-excerpt { color: #718096; font-size: 0.95rem; line-height: 1.6; margin-bottom: 1rem; }
    .news-footer { display: flex; justify-content: space-between; align-items: center; padding: 1rem 1.5rem; border-top: 1px solid #e2e8f0; background: #f7fafc; }
    .news-author { display: flex; align-items: center; gap: 0.5rem; color: #4a5568; font-size: 0.9rem; }
    .news-author img { width: 32px; height: 32px; border-radius: 50%; border: 2px solid #e2e8f0; }
    .news-views { color: #a0aec0; font-size: 0.9rem; display: flex; align-items: center; gap: 0.3rem; }

    .popular-card { background: #fff; border-radius: 15px; padding: 1.5rem; box-shadow: 0 4px 15px rgba(0,0,0,0.08); }
    .popular-header { font-size: 1.5rem; font-weight: 700; color: #2d3748; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 2px solid #e2e8f0; }
    .popular-item { display: flex; gap: 1rem; padding: 1rem; margin-bottom: 1rem; border-radius: 12px; transition: all 0.3s ease; }
    .popular-item:hover { background: #f7fafc; transform: translateX(5px); }
    .popular-item-img { width: 110px; height: 110px; border-radius: 12px; overflow: hidden; flex-shrink: 0; }
    .popular-item-img img { width: 100%; height: 100%; object-fit: cover; }
    .popular-item-content { flex: 1; display: flex; flex-direction: column; justify-content: center; }
    .popular-item-meta { display: flex; gap: 0.8rem; margin-bottom: 0.5rem; }
    .popular-item-badge { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: #fff; padding: 0.3rem 0.6rem; border-radius: 12px; font-size: 0.7rem; font-weight: 600; text-decoration: none; }
    .popular-item-title { font-size: 0.95rem; font-weight: 600; color: #2d3748; line-height: 1.4; margin: 0; text-decoration: none; display: block; }
    .popular-item-title:hover { color: #667eea; }

    @@media (max-width: 991px) {
        .expanding-panel { height: 400px; }
        .panel-title { font-size: 1.2rem; }
    }
    @@media (max-width: 768px) {
        .expanding-container { flex-direction: column; }
        .expanding-panel { flex: none !important; height: 200px; margin: 5px 0; }
        .expanding-panel .panel-content { opacity: 1; transform: translateY(0); }
        .panel-title { font-size: 1rem; }
        .news-card-img { height: 200px; }
    }
</style>

<!-- Genisleyen Kartlar (Expanding Panels) -->
<div class="container-fluid px-0 mb-4">
    <div class="expanding-container">
        @{ var index = 0; var isFirst = true; }
        @foreach (var slayt in Model.Slaytlar)
        {
            index++;
            <div class="expanding-panel @(isFirst ? "active" : "")"
                 style="background-image: url('@Url.Content(conf.GetSection("Ayarlar")["StaticFilesUrl"] + slayt.Resim)')">
                <span class="panel-number">@index</span>
                <div class="panel-content">
                    <a href="/Haberler/Detay/@slayt.HaberId" class="panel-category">@slayt.Baslik</a>
                    <a href="/Haberler/Detay/@slayt.HaberId" class="panel-title">@slayt.Icerik</a>
                </div>
            </div>
            isFirst = false;
        }
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const panels = document.querySelectorAll('.expanding-panel');
        panels.forEach(panel => {
            panel.addEventListener('click', () => {
                panels.forEach(p => p.classList.remove('active'));
                panel.classList.add('active');
            });
        });
    });
</script>

<!-- Breaking News -->
<div class="container-fluid breaking-news">
    <div class="container">
        <div class="d-flex align-items-center">
            <span class="breaking-badge">SON DAKİKA</span>
            <div class="owl-carousel tranding-carousel flex-grow-1 ml-3 breaking-text">
                @foreach (var item in Model.Haberler.OrderByDescending(x => x.EklenmeTarihi).Take(5))
                {
                    <div><a href="/Haberler/Detay/@item.Id">@item.Baslik</a></div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container-fluid">
    <div class="container">
        <div class="row">
            <!-- News Grid -->
            <div class="col-lg-8">
                <div class="section-header">
                    <h2 class="section-title">Son Haberler</h2>
                    <a href="/Haberler" class="section-link">Tümünü Gör <i class="fas fa-arrow-right ml-1"></i></a>
                </div>

                <div class="row">
                    @foreach (var item in Model.Haberler)
                    {
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="news-card">
                                <div class="news-card-img">
                                    <a href="/Haberler/Detay/@item.Id">
                                        <img src="@Url.Content(conf.GetSection("Ayarlar")["StaticFilesUrl"] + item.Resim)" alt="@item.Baslik" loading="lazy">
                                    </a>
                                </div>
                                <div class="news-card-body">
                                    <div class="news-meta">
                                        <a href="/Haberler/Index/@item.KategoriId" class="news-badge">@item.Kategori</a>
                                        <span class="news-date"><i class="far fa-clock"></i>@item.EklenmeTarihi</span>
                                    </div>
                                    <a href="/Haberler/Detay/@item.Id" class="news-title">@item.Baslik</a>
                                    <p class="news-excerpt">
                                        @if (item.Icerik.Length <= 120)
                                        {
                                            @item.Icerik
                                        }
                                        else
                                        {
                                            @(item.Icerik.Substring(0, 120) + "...")
                                        }
                                    </p>
                                </div>
                                <div class="news-footer">
                                    <div class="news-author">
                                        <i class="far fa-user"></i>
                                        <span>@item.Yazar</span>
                                    </div>
                                    <div class="news-views">
                                        <i class="far fa-eye"></i>
                                        <span>@item.GosterimSayisi</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="popular-card">
                    <h3 class="popular-header">En Çok Okunanlar</h3>
                    @foreach (var item in Model.Haberler.OrderByDescending(x => x.GosterimSayisi).Take(5))
                    {
                        <div class="popular-item">
                            <div class="popular-item-img">
                                <img src="@Url.Content(conf.GetSection("Ayarlar")["StaticFilesUrl"] + item.Resim)" alt="@item.Baslik" loading="lazy">
                            </div>
                            <div class="popular-item-content">
                                <div class="popular-item-meta">
                                    <a href="/Haberler/Index/@item.KategoriId" class="popular-item-badge">@item.Kategori</a>
                                    <span class="news-date"><i class="far fa-clock"></i>@item.EklenmeTarihi</span>
                                </div>
                                <a href="/Haberler/Detay/@item.Id" class="popular-item-title">@item.Baslik</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
