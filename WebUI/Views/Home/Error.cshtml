@model WebUI.Models.ErrorViewModel

@{
    ViewData["Title"] = Model.StatusCode + " - " + Model.Title + " | MASKER";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .error-page {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4rem 0;
        background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
    }
    .error-container {
        text-align: center;
        max-width: 600px;
        padding: 3rem;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.1);
    }
    .error-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 2rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #fff;
    }
    .error-icon.e404 {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .error-icon.e403 {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }
    .error-icon.e500 {
        background: linear-gradient(135deg, #ff6a00 0%, #ee0979 100%);
    }
    .error-code {
        font-size: 5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
        margin-bottom: 1rem;
    }
    .error-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 0.75rem;
    }
    .error-message {
        font-size: 1.1rem;
        color: #718096;
        margin-bottom: 2rem;
        line-height: 1.6;
    }
    .error-search {
        max-width: 400px;
        margin: 0 auto 2rem;
    }
    .error-search-group {
        display: flex;
        border-radius: 50px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .error-search-input {
        flex: 1;
        border: 2px solid #e2e8f0;
        border-right: none;
        padding: 0.8rem 1.5rem;
        font-size: 1rem;
        outline: none;
        border-radius: 50px 0 0 50px;
    }
    .error-search-input:focus {
        border-color: #667eea;
    }
    .error-search-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 0.8rem 1.5rem;
        color: #fff;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 0 50px 50px 0;
        transition: opacity 0.3s;
    }
    .error-search-btn:hover {
        opacity: 0.9;
    }
    .error-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }
    .error-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.75rem;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
        font-size: 0.95rem;
    }
    .error-btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
    }
    .error-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        color: #fff;
    }
    .error-btn-secondary {
        background: #f7fafc;
        color: #4a5568;
        border: 2px solid #e2e8f0;
    }
    .error-btn-secondary:hover {
        background: #edf2f7;
        transform: translateY(-2px);
        color: #4a5568;
    }
    .error-request-id {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e2e8f0;
        font-size: 0.8rem;
        color: #a0aec0;
    }

    @@media (max-width: 768px) {
        .error-container { padding: 2rem 1.5rem; margin: 0 1rem; }
        .error-code { font-size: 3.5rem; }
        .error-title { font-size: 1.4rem; }
        .error-actions { flex-direction: column; align-items: center; }
    }
</style>

<div class="error-page">
    <div class="error-container">
        @if (Model.StatusCode == 404)
        {
            <div class="error-icon e404">
                <i class="fas fa-search"></i>
            </div>
        }
        else if (Model.StatusCode == 403)
        {
            <div class="error-icon e403">
                <i class="fas fa-lock"></i>
            </div>
        }
        else
        {
            <div class="error-icon e500">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
        }

        <div class="error-code">@Model.StatusCode</div>
        <h1 class="error-title">@Model.Title</h1>
        <p class="error-message">@Model.Message</p>

        @if (Model.StatusCode == 404)
        {
            <div class="error-search">
                <form action="/Search" method="get">
                    <div class="error-search-group">
                        <input type="text" name="q" class="error-search-input" placeholder="Haber veya icerik arayin...">
                        <button type="submit" class="error-search-btn">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        }

        <div class="error-actions">
            <a href="/" class="error-btn error-btn-primary">
                <i class="fas fa-home"></i> Anasayfaya Don
            </a>
            <a href="/Haberler" class="error-btn error-btn-secondary">
                <i class="fas fa-newspaper"></i> Haberlere Git
            </a>
        </div>

        @if (Model.ShowRequestId)
        {
            <div class="error-request-id">
                <i class="fas fa-fingerprint mr-1"></i> Hata Kodu: @Model.RequestId
            </div>
        }
    </div>
</div>
