@model WebUI.Models.GirisViewModel
@{
    ViewData["Title"] = "Giris Yap";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-10">
            <div class="bg-white p-5 shadow-sm" style="border-radius: 8px;">
                <h3 class="text-center mb-4 text-uppercase font-weight-bold">Giris Yap</h3>

                <div asp-validation-summary="All" class="alert alert-danger" style="display:@(ViewData.ModelState.ErrorCount > 0 ? "block" : "none")"></div>

                <form asp-action="Giris" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Eposta" class="font-weight-bold small">E-posta</label>
                        <input asp-for="Eposta" class="form-control" placeholder="ornek@email.com" />
                        <span asp-validation-for="Eposta" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Sifre" class="font-weight-bold small">Sifre</label>
                        <input asp-for="Sifre" class="form-control" placeholder="Sifrenizi giriniz" />
                        <span asp-validation-for="Sifre" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block font-weight-bold py-2">Giris Yap</button>
                </form>

                <hr class="my-4" />
                <p class="text-center mb-0">
                    Hesabiniz yok mu?
                    <a href="/Hesap/Kayit" class="font-weight-bold text-primary">Kayit Ol</a>
                </p>
            </div>
        </div>
    </div>
</div>
