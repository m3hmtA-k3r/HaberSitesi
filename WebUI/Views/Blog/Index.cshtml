@model WebUI.Models.BlogListViewModel

@{
    ViewData["Title"] = "Blog - MASKER";
    ViewData["Description"] = "MASKER Blog - Guncel yazilar, teknik makaleler ve daha fazlasi. En son blog iceriklerini kesfetIn.";
    ViewData["Keywords"] = "blog, yazilar, makaleler, teknoloji, MASKER";
}

<style>
    .blog-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 4rem 0;
        margin-bottom: 3rem;
        color: #fff;
        text-align: center;
    }
    .blog-title { font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem; }
    .blog-subtitle { font-size: 1.1rem; opacity: 0.9; }

    .blog-section { padding-bottom: 4rem; }

    .category-filter {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-bottom: 2.5rem;
        justify-content: center;
    }
    .category-btn {
        padding: 0.6rem 1.5rem;
        border-radius: 25px;
        border: 2px solid #667eea;
        background: transparent;
        color: #667eea;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
    }
    .category-btn:hover, .category-btn.active {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        border-color: transparent;
    }

    .blog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
    }

    .blog-card {
        background: #fff;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        transition: all 0.3s;
    }
    .blog-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 60px rgba(0,0,0,0.15);
    }

    .blog-card-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
    }

    .blog-card-content {
        padding: 1.5rem;
    }

    .blog-card-category {
        display: inline-block;
        padding: 0.3rem 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .blog-card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 0.75rem;
        line-height: 1.4;
    }
    .blog-card-title a {
        color: inherit;
        text-decoration: none;
        transition: color 0.3s;
    }
    .blog-card-title a:hover { color: #667eea; }

    .blog-card-excerpt {
        color: #718096;
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 1rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .blog-card-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid #f0f0f0;
        font-size: 0.85rem;
        color: #a0aec0;
    }

    .blog-card-author {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .blog-card-author img {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        object-fit: cover;
    }

    .blog-card-stats {
        display: flex;
        gap: 1rem;
    }
    .blog-card-stats span { display: flex; align-items: center; gap: 0.3rem; }

    .read-more-btn {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
        font-size: 0.9rem;
    }
    .read-more-btn:hover {
        transform: translateX(5px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        color: #fff;
    }

    .no-blogs {
        text-align: center;
        padding: 4rem 2rem;
        background: #f7fafc;
        border-radius: 20px;
    }
    .no-blogs i { font-size: 4rem; color: #cbd5e0; margin-bottom: 1rem; }
    .no-blogs h3 { color: #4a5568; margin-bottom: 0.5rem; }
    .no-blogs p { color: #718096; }
</style>

<!-- Blog Header -->
<div class="blog-header">
    <div class="container">
        <h1 class="blog-title"><i class="fas fa-blog mr-2"></i>Blog</h1>
        <p class="blog-subtitle">Guncel yazilar, teknik makaleler ve daha fazlasi</p>
    </div>
</div>

<!-- Breadcrumb -->
<div class="container" style="margin-top: -1.5rem; margin-bottom: 2rem;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList" style="background: #fff; border-radius: 10px; padding: 0.75rem 1.25rem; box-shadow: 0 2px 8px rgba(0,0,0,0.06); margin: 0; font-size: 0.9rem;">
            <li class="breadcrumb-item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                <a href="/" itemprop="item" style="color: #667eea; text-decoration: none;"><i class="fas fa-home mr-1"></i><span itemprop="name">Anasayfa</span></a>
                <meta itemprop="position" content="1" />
            </li>
            <li class="breadcrumb-item active" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem" aria-current="page">
                <span itemprop="name" style="color: #764ba2; font-weight: 600;">Blog</span>
                <meta itemprop="position" content="2" />
            </li>
        </ol>
    </nav>
</div>

<!-- Blog Section -->
<div class="container blog-section">
    <!-- Category Filter -->
    <div class="category-filter">
        <a href="/Blog" class="category-btn @(Model.SeciliKategoriId == null ? "active" : "")">
            <i class="fas fa-th-large mr-1"></i>Tumunu Goster
        </a>
        @foreach (var kategori in Model.Kategoriler)
        {
            <a href="/Blog?kategoriId=@kategori.Id"
               class="category-btn @(Model.SeciliKategoriId == kategori.Id ? "active" : "")">
                @kategori.Adi
            </a>
        }
    </div>

    <!-- Blog Grid -->
    @if (Model.Bloglar != null && Model.Bloglar.Any())
    {
        <div class="blog-grid">
            @foreach (var blog in Model.Bloglar)
            {
                <article class="blog-card">
                    @if (!string.IsNullOrEmpty(blog.GorselUrl))
                    {
                        <img src="@blog.GorselUrl" alt="@blog.Baslik" class="blog-card-image">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/400x220/667eea/ffffff?text=Blog" alt="@blog.Baslik" class="blog-card-image">
                    }

                    <div class="blog-card-content">
                        @if (!string.IsNullOrEmpty(blog.KategoriAdi))
                        {
                            <span class="blog-card-category">@blog.KategoriAdi</span>
                        }

                        <h3 class="blog-card-title">
                            <a href="/Blog/Detay/@blog.Id">@blog.Baslik</a>
                        </h3>

                        <p class="blog-card-excerpt">
                            @(blog.Ozet ?? (blog.Icerik?.Length > 150 ? blog.Icerik.Substring(0, 150) + "..." : blog.Icerik))
                        </p>

                        <div class="blog-card-meta">
                            <div class="blog-card-author">
                                @if (!string.IsNullOrEmpty(blog.YazarResim))
                                {
                                    <img src="@blog.YazarResim" alt="@blog.YazarAdi">
                                }
                                else
                                {
                                    <i class="fas fa-user-circle" style="font-size: 1.5rem;"></i>
                                }
                                <span>@(blog.YazarAdi ?? "Anonim")</span>
                            </div>
                            <div class="blog-card-stats">
                                <span><i class="far fa-calendar"></i> @blog.YayinTarihi.ToString("dd MMM yyyy")</span>
                                <span><i class="far fa-eye"></i> @blog.GoruntulenmeSayisi</span>
                            </div>
                        </div>

                        <div class="mt-3">
                            <a href="/Blog/Detay/@blog.Id" class="read-more-btn">
                                Devamini Oku <i class="fas fa-arrow-right ml-1"></i>
                            </a>
                        </div>
                    </div>
                </article>
            }
        </div>
    }
    else
    {
        <div class="no-blogs">
            <i class="fas fa-inbox"></i>
            <h3>Henuz blog yazisi bulunmuyor</h3>
            <p>Yakinda yeni icerikler eklenecektir.</p>
        </div>
    }

    @{
        ViewData["BaseUrl"] = "/Blog";
        ViewData["QueryParams"] = Model.SeciliKategoriId.HasValue ? $"&kategoriId={Model.SeciliKategoriId}" : "";
    }
    @await Html.PartialAsync("_Pagination", Model.Pagination)
</div>
