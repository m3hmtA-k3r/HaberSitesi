@model AdminUI.Models.ProfilViewModel

<div class="container">
    <div class="page-title">
        <h3>Profilim</h3>
    </div>

    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mesaj"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Profil Bilgileri
                </div>
                <div class="card-body">
                    <form asp-action="ProfilGuncelle" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ad *</label>
                                <input type="text" class="form-control" asp-for="Ad" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Soyad *</label>
                                <input type="text" class="form-control" asp-for="Soyad" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">E-posta</label>
                                <input type="email" class="form-control" asp-for="Eposta" readonly />
                                <small class="text-muted">E-posta degistirilemez</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Profil Resmi</label>
                                @if (!string.IsNullOrEmpty(Model.Resim))
                                {
                                    <div class="mb-2">
                                        <img src="@Model.Resim" alt="Profil" style="max-width: 100px; max-height: 100px; border-radius: 50%;" />
                                    </div>
                                }
                                <input type="file" class="form-control" asp-for="ResimFile" accept="image/*" />
                                <input type="hidden" asp-for="Resim" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">
                                    <i class="fa fa-save"></i> Kaydet
                                </button>
                                <a href="/Account/SifreDegistir" class="btn btn-warning">
                                    <i class="fa fa-key"></i> Sifre Degistir
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Hesap Bilgileri
                </div>
                <div class="card-body">
                    <dl>
                        <dt>Roller</dt>
                        <dd>
                            @if (Model.Roller != null && Model.Roller.Any())
                            {
                                foreach (var rol in Model.Roller)
                                {
                                    <span class="badge bg-primary me-1">@rol</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Rol atanmamis</span>
                            }
                        </dd>
                        <dt>Kayit Tarihi</dt>
                        <dd>@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</dd>
                        <dt>Son Giris</dt>
                        <dd>@(Model.SonGirisTarihi?.ToString("dd.MM.yyyy HH:mm") ?? "-")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
