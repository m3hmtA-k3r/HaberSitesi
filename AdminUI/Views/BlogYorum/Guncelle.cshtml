@{
}
@using AdminUI.Models
@model BlogYorumViewModel

<div class="container">
	<div class="page-title">
		<h3>Blog Yorumu Güncelle</h3>
	</div>
	<div class="row">
		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">Yorum Düzenle</div>
				<div class="card-body">
					<p class="card-title">Blog: @Model.BlogBaslik | Tarih: @Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</p>

					@using (Html.BeginForm("YorumGuncelle", "BlogYorum", FormMethod.Post))
					{
						@Html.HiddenFor(x => x.Id)
						@Html.HiddenFor(x => x.BlogId)
						<div class="row">
							<div class="col-md-6">
								<div class="mb-3">
									<label class="form-label">Ad</label>
									@Html.TextBoxFor(x => x.Ad, new { placeholder = "Ad", @class = "form-control", required = "required" })
								</div>
							</div>
							<div class="col-md-6">
								<div class="mb-3">
									<label class="form-label">Soyad</label>
									@Html.TextBoxFor(x => x.Soyad, new { placeholder = "Soyad", @class = "form-control" })
								</div>
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label">E-posta</label>
							@Html.TextBoxFor(x => x.Eposta, new { placeholder = "E-posta", @class = "form-control", type = "email", required = "required" })
						</div>
						<div class="mb-3">
							<label class="form-label">Yorum</label>
							@Html.TextAreaFor(x => x.Yorum, new { placeholder = "Yorum", @class = "form-control", rows = "5", required = "required" })
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="mb-3">
									<label class="form-label">Onay Durumu</label>
									<div class="form-check form-switch">
										@Html.CheckBoxFor(x => x.OnaylandiMi, new { @class = "form-check-input" })
										<label class="form-check-label">Onaylı</label>
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="mb-3">
									<label class="form-label">Aktif Durumu</label>
									<div class="form-check form-switch">
										@Html.CheckBoxFor(x => x.AktifMi, new { @class = "form-check-input" })
										<label class="form-check-label">Aktif</label>
									</div>
								</div>
							</div>
						</div>
						<br />
						<button type="submit" class="btn btn-warning">Güncelle</button>
						<a href="/BlogYorum" class="btn btn-secondary">İptal</a>
					}
				</div>
			</div>
		</div>
	</div>
</div>
