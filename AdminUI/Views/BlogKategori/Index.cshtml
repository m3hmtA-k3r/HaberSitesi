@{
}
@using Shared.Dtos
@model List<BlogKategorilerDto>

<div class="container">
	<div class="page-title">
		<h3>Blog Kategorileri</h3>
	</div>
	<div class="row">
		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row">
						<div class="col-9" style="line-height:50px;">Blog Kategorileri Listesi</div>
						<div class="col-3"><a href="/BlogKategori/Ekle" style="float:right;color: white;background-color:green;" class="btn float-right m-2"><i class="fa fa-plus"></i></a></div>
					</div>
				</div>
				<div class="card-body">
					<p class="card-title">Blog kategorileri ile ilgili tüm işlemleri buradan yapabilirsiniz. Toplam Aktif Kategori Sayısı: @Model.Where(x => x.AktifMi == true).Count()</p>
					<table class="table table-hover" id="dataTables-example" width="100%">
						<thead>
							<tr>
								<th>Sıra</th>
								<th>Kategori Adı</th>
								<th>Açıklama</th>
								<th>Blog Sayısı</th>
								<th>Durum</th>
								<th style="min-width:110px;">İşlemler</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.OrderBy(x => x.Sira))
							{
								<tr>
									<td>@item.Sira</td>
									<td>@item.Adi</td>
									<td>@(item.Aciklama ?? "-")</td>
									<td>@item.BlogSayisi</td>
									<td>
										@if (item.AktifMi)
										{
											<span class="badge bg-info">Aktif</span>
										}
										else
										{
											<span class="badge bg-danger">Pasif</span>
										}
									</td>
									<td>
										<a href="/BlogKategori/Guncelle?kategoriId=@item.Id" class="btn btn-primary mb-2"><i class="fa fa-edit"></i></a>
										<a href="/BlogKategori/Sil?kategoriId=@item.Id" class="btn btn-danger mb-2" style="width: 44px;" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');"><i class="fa fa-times"></i></a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
