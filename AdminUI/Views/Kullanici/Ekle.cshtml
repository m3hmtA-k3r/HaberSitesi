@model AdminUI.Models.KullaniciViewModel

<div class="container">
    <div class="page-title">
        <h3>Yeni Kullanici Ekle</h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-9" style="line-height:50px;">Kullanici Bilgileri</div>
                        <div class="col-3">
                            <a href="/Kullanici" style="float:right;" class="btn btn-secondary m-2">
                                <i class="fa fa-arrow-left"></i> Geri
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="KullaniciEkle" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ad *</label>
                                <input type="text" class="form-control" asp-for="Ad" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Soyad *</label>
                                <input type="text" class="form-control" asp-for="Soyad" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">E-posta *</label>
                                <input type="email" class="form-control" asp-for="Eposta" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Durum</label>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="AktifMi" checked />
                                    <label class="form-check-label">Aktif</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Sifre *</label>
                                <input type="password" class="form-control" asp-for="Sifre" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Sifre Tekrar *</label>
                                <input type="password" class="form-control" asp-for="SifreTekrar" required />
                                <span asp-validation-for="SifreTekrar" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Profil Resmi</label>
                                <input type="file" class="form-control" asp-for="ResimFile" accept="image/*" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Roller</label>
                                <select class="form-control" asp-for="SeciliRoller" asp-items="Model.TumRoller" multiple>
                                </select>
                                <small class="text-muted">Ctrl+Click ile birden fazla rol secilebilir</small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">
                                    <i class="fa fa-save"></i> Kaydet
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
