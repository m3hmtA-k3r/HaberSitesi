@{
}
@using Shared.Dtos
@model List<BloglarDto>

<div class="container">
	<div class="page-title">
		<h3>Blog Yazıları</h3>
	</div>
	<div class="row">
		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row">
						<div class="col-9" style="line-height:50px;">Blog Yazıları Listesi</div>
						<div class="col-3"><a href="/Blog/Ekle" style="float:right;color: white;background-color:green;" class="btn float-right m-2"><i class="fa fa-plus"></i></a></div>
					</div>
				</div>
				<div class="card-body">
					<p class="card-title">Blog yazıları ile ilgili tüm işlemleri buradan yapabilirsiniz. Toplam Aktif Yazı Sayısı: @Model.Where(x => x.AktifMi == true).Count()</p>
					<table class="table table-hover" id="dataTables-example" width="100%">
						<thead>
							<tr>
								<th>Başlık</th>
								<th>Kategori</th>
								<th>Yazar</th>
								<th>Yayın Tarihi</th>
								<th>Görüntülenme</th>
								<th>Durum</th>
								<th style="min-width:110px;">İşlemler</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Baslik</td>
									<td>@(item.KategoriAdi ?? "-")</td>
									<td>@(item.YazarAdi ?? "-")</td>
									<td>@item.YayinTarihi.ToString("dd.MM.yyyy")</td>
									<td>@item.GoruntulenmeSayisi</td>
									<td>
										@if (item.AktifMi)
										{
											<span class="badge bg-info">Aktif</span>
										}
										else
										{
											<span class="badge bg-danger">Pasif</span>
										}
									</td>
									<td>
										<a href="/Blog/Guncelle?blogId=@item.Id" class="btn btn-primary mb-2"><i class="fa fa-edit"></i></a>
										<a href="/Blog/Sil?blogId=@item.Id" class="btn btn-danger mb-2" style="width: 44px;" onclick="return confirm('Bu blog yazısını silmek istediğinize emin misiniz?');"><i class="fa fa-times"></i></a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
