@using Shared.Dtos
@model List<IletisimMesajlariDto>

@{
    var toplamSayisi = Model.Count;
    var okunmamisSayisi = Model.Count(x => !x.OkunduMu);
    var cevaplanmisSayisi = Model.Count(x => x.CevaplandiMi);
}

<style>
    .stats-card { border-radius: 12px; padding: 1.5rem; color: #fff; transition: transform 0.2s ease, box-shadow 0.2s ease; }
    .stats-card:hover { transform: translateY(-3px); box-shadow: 0 8px 25px rgba(0,0,0,0.15); }
    .stats-card .stats-icon { width: 50px; height: 50px; border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; background: rgba(255,255,255,0.2); }
    .stats-card .stats-number { font-size: 2rem; font-weight: 700; }
    .stats-card .stats-label { font-size: 0.85rem; opacity: 0.9; }
    .stats-total { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .stats-active { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
    .stats-passive { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); }
    .data-table th { background: #f8f9fa; font-weight: 600; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px; color: #495057; border-bottom: 2px solid #dee2e6; }
    .data-table td { vertical-align: middle; font-size: 0.9rem; }
    .badge-status { padding: 0.4rem 0.8rem; border-radius: 20px; font-weight: 500; font-size: 0.75rem; }
    .badge-unread { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: #fff; }
    .badge-read { background: #e2e8f0; color: #718096; }
    .badge-replied { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: #fff; }
    .msg-subject { font-weight: 600; color: #2d3748; }
    .msg-preview { color: #718096; font-size: 0.85rem; max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
    .msg-sender { font-weight: 600; color: #2d3748; }
    .msg-email { color: #718096; font-size: 0.85rem; }
    .msg-date { color: #718096; font-size: 0.85rem; }
    .msg-icon { width: 45px; height: 45px; border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem; color: #fff; }
    .msg-icon-unread { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
    .msg-icon-read { background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); }
    .msg-icon-replied { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); }
    .btn-action { width: 38px; height: 38px; padding: 0; display: inline-flex; align-items: center; justify-content: center; border-radius: 8px; transition: all 0.2s ease; }
    .btn-action:hover { transform: scale(1.1); }
    .btn-bulk-delete { background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%); border: none; color: #fff; padding: 0.5rem 1rem; border-radius: 8px; font-weight: 500; display: none; }
    .btn-bulk-delete.show { display: inline-flex; align-items: center; gap: 0.5rem; }
    .form-check-input { width: 18px; height: 18px; cursor: pointer; }
    .form-check-input:checked { background-color: #667eea; border-color: #667eea; }
    .card-header-custom { background: #fff; border-bottom: 1px solid #e2e8f0; padding: 1rem 1.5rem; }
    .card-header-custom h5 { margin: 0; font-weight: 600; color: #2d3748; }
    .row-unread { background: #f8f5ff; }
    .modal-confirm .modal-header { border-bottom: none; padding: 1.5rem 1.5rem 0; }
    .modal-confirm .modal-body { text-align: center; padding: 1.5rem; }
    .modal-confirm .modal-footer { border-top: none; justify-content: center; padding: 0 1.5rem 1.5rem; gap: 0.5rem; }
    .modal-confirm .icon-box { width: 80px; height: 80px; border-radius: 50%; margin: 0 auto 1.5rem; display: flex; align-items: center; justify-content: center; background: #fff3f3; }
    .modal-confirm .icon-box i { font-size: 2.5rem; color: #ef4444; }
</style>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-1"><i class="fas fa-envelope me-2 text-primary"></i>Iletisim Mesajlari</h3>
            <p class="text-muted mb-0">Gelen iletisim mesajlarini goruntuleyin ve yonetin</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-6 col-lg-4 mb-3 mb-lg-0">
            <div class="stats-card stats-total">
                <div class="d-flex justify-content-between align-items-center">
                    <div><div class="stats-number">@toplamSayisi</div><div class="stats-label">Toplam Mesaj</div></div>
                    <div class="stats-icon"><i class="fas fa-envelope"></i></div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-4 mb-3 mb-lg-0">
            <div class="stats-card stats-active">
                <div class="d-flex justify-content-between align-items-center">
                    <div><div class="stats-number">@okunmamisSayisi</div><div class="stats-label">Okunmamis</div></div>
                    <div class="stats-icon"><i class="fas fa-envelope-open-text"></i></div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <div class="stats-card stats-passive">
                <div class="d-flex justify-content-between align-items-center">
                    <div><div class="stats-number">@cevaplanmisSayisi</div><div class="stats-label">Cevaplanmis</div></div>
                    <div class="stats-icon"><i class="fas fa-reply"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header-custom d-flex justify-content-between align-items-center">
            <h5><i class="fas fa-list me-2 text-primary"></i>Mesaj Listesi</h5>
            <button type="button" class="btn btn-bulk-delete" id="bulkDeleteBtn" onclick="bulkDelete()">
                <i class="fas fa-trash-alt"></i> <span id="selectedCount">0</span> Secili Sil
            </button>
        </div>
        <div class="card-body">
            <table class="table table-hover data-table" id="dataTables-example" width="100%">
                <thead>
                    <tr>
                        <th style="width: 40px;"><input type="checkbox" class="form-check-input" id="selectAll" onchange="toggleSelectAll()"></th>
                        <th style="width: 60px;">Durum</th>
                        <th>Gonderen</th>
                        <th>Konu</th>
                        <th>Tarih</th>
                        <th style="width: 120px;">Islemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderByDescending(x => x.EklemeTarihi))
                    {
                        var iconClass = item.CevaplandiMi ? "msg-icon-replied" : (item.OkunduMu ? "msg-icon-read" : "msg-icon-unread");
                        var iconName = item.CevaplandiMi ? "fas fa-reply" : (item.OkunduMu ? "fas fa-envelope-open" : "fas fa-envelope");
                        <tr class="@(!item.OkunduMu ? "row-unread" : "")">
                            <td><input type="checkbox" class="form-check-input row-checkbox" value="@item.Id" onchange="updateBulkButton()"></td>
                            <td>
                                <div class="msg-icon @iconClass"><i class="@iconName"></i></div>
                            </td>
                            <td>
                                <div class="msg-sender">@item.Ad</div>
                                <div class="msg-email">@item.Eposta</div>
                            </td>
                            <td>
                                <div class="msg-subject">@item.Konu</div>
                                <div class="msg-preview">@item.Mesaj</div>
                            </td>
                            <td><div class="msg-date">@item.EklemeTarihi.ToString("dd.MM.yyyy HH:mm")</div></td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a href="/Iletisim/Detay?mesajId=@item.Id" class="btn btn-primary btn-action" title="Detay"><i class="fas fa-eye"></i></a>
                                    <button type="button" class="btn btn-danger btn-action" onclick="confirmDelete(@item.Id, '@item.Ad')" title="Sil"><i class="fa fa-trash-alt"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade modal-confirm" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <div class="icon-box"><i class="fas fa-exclamation-triangle"></i></div>
                <h4 class="mb-3">Silmek istediginize emin misiniz?</h4>
                <p class="text-muted mb-0" id="deleteMessage">Bu mesaji silmek uzeresiniz.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Iptal</button>
                <a href="#" class="btn btn-danger px-4" id="confirmDeleteBtn"><i class="fas fa-trash-alt me-1"></i> Sil</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modal-confirm" id="bulkDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <div class="icon-box"><i class="fas fa-exclamation-triangle"></i></div>
                <h4 class="mb-3">Toplu silme islemi</h4>
                <p class="text-muted mb-0"><span id="bulkDeleteCount">0</span> mesaj silinecek.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Iptal</button>
                <button type="button" class="btn btn-danger px-4" onclick="executeBulkDelete()"><i class="fas fa-trash-alt me-1"></i> Tumunu Sil</button>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(id, name) {
        document.getElementById('deleteMessage').innerHTML = '<strong>"' + name + '"</strong> mesajini silmek uzeresiniz.<br><small class="text-muted">Bu islem geri alinamaz.</small>';
        document.getElementById('confirmDeleteBtn').href = '/Iletisim/Sil?mesajId=' + id;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
    function toggleSelectAll() {
        var selectAll = document.getElementById('selectAll');
        document.querySelectorAll('.row-checkbox').forEach(cb => cb.checked = selectAll.checked);
        updateBulkButton();
    }
    function updateBulkButton() {
        var checked = document.querySelectorAll('.row-checkbox:checked').length;
        document.getElementById('selectedCount').textContent = checked;
        document.getElementById('bulkDeleteBtn').classList.toggle('show', checked > 0);
        var all = document.querySelectorAll('.row-checkbox').length;
        document.getElementById('selectAll').checked = checked === all && all > 0;
    }
    function bulkDelete() {
        document.getElementById('bulkDeleteCount').textContent = document.querySelectorAll('.row-checkbox:checked').length;
        new bootstrap.Modal(document.getElementById('bulkDeleteModal')).show();
    }
    function executeBulkDelete() {
        var ids = Array.from(document.querySelectorAll('.row-checkbox:checked')).map(cb => cb.value);
        if (ids.length > 0) {
            Promise.all(ids.map(id => fetch('/Iletisim/SilAjax?mesajId=' + id, { method: 'POST' }))).then(() => location.reload());
        }
        bootstrap.Modal.getInstance(document.getElementById('bulkDeleteModal')).hide();
    }
</script>
